= button_tag '編集', 'class' => 'btn btn-secondary', 'data-toggle' => 'modal', 'data-target' => "#teacher_edit_#{teacher.id}"
.modal.fade id="teacher_edit_#{teacher.id}" role="dialog" area-hidden="true"
  .modal-dialog
    .modal-content
      = form_for teacher, url: teacher_path(teacher), remote: true do |f|
        .modal-header
          h4.modal-title 講師情報の編集
        .modal-body
          .form-group
            .form-row
              .col
                = f.label :name, '氏名'
                = f.text_field :name, { class: 'form-control' }
          .form-group
            .form-row
              .col
                = f.label :email
                = f.text_field :email, { class: 'form-control' }
          div id="teacher_edit_alert_#{teacher.id}"
        .modal-footer
          = f.submit '保存', {"class" => "btn btn-primary"}
          = button_tag '戻る', {"data-dismiss" => "modal", "class" => "btn btn-secondary"}
