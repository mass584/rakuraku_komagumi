== render 'application/header'
== render 'application/subheader'
.content
  .container
    .domain1
      h3 = "#{@teacher.fullname}"
      table.table.table-bordered
        thead
          tr
            th.date 日付
            - schedulemaster.class_array.each do |c|
              th.class = p_class(c)
        tbody
          - schedulemaster.date_array.each do |d|
            tr
              th.date = p_date(d, schedulemaster.schedule_type)
              - schedulemaster.class_array.each do |c|
                td.class
                  - if @teacherrequest[d][c]
                    = image_tag('maru.png', size: '32x32')
                  - else
                    = image_tag('batsu.png', size: '32x32')
      div.links
        = button_to '講師一覧へ',
          teacherrequest_index_path,
          {class: 'btn btn-default', method: :get}


== render 'application/footer'
== javascript_include_tag 'common.js'
