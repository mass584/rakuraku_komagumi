- if @status == 'success'
  | $('#modal-teacher').modal('hide');
  | $('#modal-teacher').html('');
  | $('tbody').append("#{escape_javascript(render 'teacher/tr')}");
  | $('[id=button_maru]').off('click');
  | $('[id=button_batsu]').off('click');
  | $('[id=button_maru]').on('click', cb_maru_click);
  | $('[id=button_batsu]').on('click', cb_batsu_click);
- elsif @status == 'fail'
  | $('.error-message').html("#{escape_javascript(error_msg(@teacher.errors.full_messages))}");
