== render partial: 'navbar', locals: { active: 'teacher' }
.container
  .row.justify-content-md-center.pt-5.pb-2
    .col-md-auto 
      p.h3 講師一覧 
  .row.justify-content-md-center.pt-2.pb-2
    .col-md-auto 
      table.table
        thead
          tr
            th 氏名
            - @room.exist_subjects.each do |su|
              th = su.name
            th 編集
            th 削除
        tbody
          - @teachers.each do |te|
            == render partial: 'teacher/tr', locals: { teacher: te }
  .row.justify-content-md-center.pt-2.pb-5
    .col-md-auto
      button.btn.btn-primary data-toggle="modal" data-target="#teacher_create" = '新規'
      == render 'teacher/new'
