.modal.fade id="student_create" role="dialog" area-hidden="true"
  .modal-dialog role="document"
    .modal-content
      = form_for @student, :url => { :controller => :student, :action => :create }, remote: true do |f|
        .modal-header
          h4.modal-title 生徒の追加
        .modal-body
          .form-group
            .form-row
              .col
                = f.label :name, '氏名'
                = f.text_field :name, { class: 'form-control' }
              .col
                = f.label :name_kana, '氏名(かな)'
                = f.text_field :name_kana, { class: 'form-control' }
          .form-group
            .form-row
              .col-xs-2
                = f.label :gender, '性別'
                = f.select :gender, { '男': 'male', '女': 'female' }, { include_blank: '選択して下さい' }, { class: 'form-control' }
          .form-group
            .form-row
              .col
                = f.label :school
                = f.text_field :school, { class: 'form-control' }
              .col
                = f.label :birth_year
                = f.select :birth_year, @student.birth_year_select, { include_blank: '選択して下さい' }, { class: 'form-control' }
          .form-group
            .form-row
              .col
                = f.label :email
                = f.text_field :email, { class: 'form-control' }
              .col
                = f.label :tel
                = f.text_field :tel, { class: 'form-control' }
          .form-group
            .form-row
              .col-xs-2
                = f.label :zip
                = f.text_field :zip, { class: 'form-control' }
          .form-group
            .form-row
              .col
                = f.label :address
                = f.text_field :address, { class: 'form-control' }
          = f.hidden_field :room_id, :value => @room.id
          div id="student_create_alert"
        .modal-footer
          = f.submit '追加', { "class" => "btn btn-primary" }
          = button_tag '戻る', { "data-dismiss" => "modal", "class" => "btn btn-secondary" }
