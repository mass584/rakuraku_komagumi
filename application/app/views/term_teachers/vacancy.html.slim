== render partial: 'navbar_term', locals: { active: 'teacher_request' }
.container.my-5
  .row.float-left.mx-5.mb-3
    p.h4 = "#{@term_teacher.name}さんの予定"
  .row.float-right.mx-5.mb-3
    = button_to '戻る', term_teachers_path, { class: 'btn btn-secondary', method: :get }
  .justify-content-center.ml-5.mr-5.mt-3.mb-3
    table.table
      thead.thead-dark
        tr
          th.align-middle 日程
          - @term.period_index_array.each do |period_index|
            th.align-middle #{period_index}限
      tbody
        - @term.date_index_array(@week).each do |date_index|
          tr
            td.align-middle = @term.display_date(date_index)
            - @term.period_index_array.each do |period_index|
              td.align-middle
                = teacher_vacancy_button(@term_teacher, @teacher_vacancies, date_index, period_index)
